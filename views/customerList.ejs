<html>
    
    <%- include('./partials/header.ejs')%>
    <h1>REGISTERED CUSTOMERS</h1>
    <table border="1">
        <!-- head -->
        <tr>
            <th>Id</th>
            <th>Username</th>
            <th>Email</th>
            <th>Action</th>
        </tr>
        <% for ( let i = 0; i < data.length; i++) {%>
        <tr>
            <td><%= data[i].id %> </td>
            <td><%= data[i].userName() %></td>
            <td><%= data[i].email %></td>
            <td><a href="/customer/delete/<%=`${data[i].id}`%>" onclick="return confirm('Are you sure you want to delete this customer?')"><button>Delete</button></a> 
            <a href="/customer/foodBought/<%= data[i].id %>"><button>Show Food Ordered</button></a></td> 
        </tr>
        <% } %>
        </table>
</html>